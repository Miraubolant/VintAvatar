# Cache static assets for 1 year
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache images for 1 week  
*.jpg
  Cache-Control: public, max-age=604800

*.jpeg
  Cache-Control: public, max-age=604800

*.png
  Cache-Control: public, max-age=604800

*.webp
  Cache-Control: public, max-age=604800

*.svg
  Cache-Control: public, max-age=604800

*.gif
  Cache-Control: public, max-age=604800

# Cache CSS and JS for 1 year with immutable
*.css
  Cache-Control: public, max-age=31536000, immutable

*.js
  Cache-Control: public, max-age=31536000, immutable

# Cache fonts for 1 year
*.woff
  Cache-Control: public, max-age=31536000, immutable

*.woff2
  Cache-Control: public, max-age=31536000, immutable

# Security headers for all pages
/*
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' blob: data: https://*.google.com https://*.googletagmanager.com https://*.google-analytics.com https://*.googleadservices.com https://*.googlesyndication.com https://*.doubleclick.net https://js.stripe.com https://*.tawk.to; script-src-elem 'self' 'unsafe-inline' https://*.google.com https://*.googletagmanager.com https://*.google-analytics.com https://*.googleadservices.com https://*.googlesyndication.com https://*.doubleclick.net https://js.stripe.com https://*.tawk.to; style-src 'self' 'unsafe-inline'; font-src 'self' https://*.tawk.to; img-src 'self' data: https: blob:; connect-src 'self' https://*.supabase.co wss://*.supabase.co https://api.stripe.com https://api.replicate.com https://replicate.delivery https://*.google.com https://*.google-analytics.com https://*.doubleclick.net https://*.googleadservices.com https://*.googlesyndication.com https://raw.githubusercontent.com https://*.tawk.to wss://*.tawk.to; frame-src https://js.stripe.com https://hooks.stripe.com https://*.googletagmanager.com https://*.doubleclick.net https://*.google.com https://*.tawk.to; base-uri 'self'; form-action 'self'; upgrade-insecure-requests;

# Cache HTML for 1 hour  
/*.html
  Cache-Control: public, max-age=3600

# Root page specific caching
/
  Cache-Control: public, max-age=3600

# Cache sitemap for 1 day
/sitemap.xml
  Cache-Control: public, max-age=86400

# Cache robots.txt for 1 day
/robots.txt
  Cache-Control: public, max-age=86400

# Enable compression
/*
  Content-Encoding: gzip